# ============================================================
# RENAME TO .env AND FILL IN YOUR VALUES
# ============================================================

# ============================================================
# FRONTEND CONFIGURATION (for JavaScript/HTML pages)
# ============================================================
# Set this to your backend server URL for production
# Leave empty or use http://localhost:3000 for local development
REACT_APP_BACKEND_URL=https://smshub-ftgg.onrender.com

# ============================================================
# BACKEND SERVER CONFIGURATION
# ============================================================

# Server port (Render will automatically set this via PORT env var)
PORT=3000

# Server URL for webhook callbacks (e.g., Paystack verification)
SERVER_URL=https://smshub-ftgg.onrender.com

# Node environment
NODE_ENV=production

# ============================================================
# PAYMENT GATEWAY - PAYSTACK
# ============================================================
# Get these from https://dashboard.paystack.com/settings/developers

# Secret key - NEVER share this publicly
PAYSTACK_SECRET_KEY=sk_live_your_secret_key_here

# Public key - Safe to use in frontend
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key_here

# ============================================================
# SMS SERVICE - 5SIM API
# ============================================================
# Get your API key from https://5sim.net/api

FIVESIM_API_KEY=your_5sim_api_key_here

# ============================================================
# TELEGRAM BOT (Optional)
# ============================================================
# Get bot token from @BotFather on Telegram

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DEFAULT_CHAT_ID=7711425125

# ============================================================
# FIREBASE CONFIGURATION (Optional - for user database)
# ============================================================
# Get these from your Firebase project settings

FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key_with_escaped_newlines
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# ============================================================
# REDIS CONFIGURATION (Optional - for chat history)
# ============================================================
# Get these from Upstash Redis

UPSTASH_REDIS_REST_URL=https://your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ============================================================
# SECURITY
# ============================================================

# API Key for VS Code extension authentication
PRIME_API_KEY=your_secure_api_key_here

# ============================================================
# DEVELOPMENT OPTIONS (Optional)
# ============================================================
# AUTO_SEND=true
# DRY_RUN=true
# AUTO_SEND_INTERVAL_MS=300000
